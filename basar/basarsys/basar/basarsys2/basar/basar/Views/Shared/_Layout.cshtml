    <style>
        body,
        h1, h2, h3, h4, h5, h6,
        p, span, a, ul, i, li, button,
        input {
            font-family: 'Cairo', sans-serif;
        }

        input, textarea, select {
            resize: none;
        }

        .label-txt-control {
            color: #237ac5;
            font-size: 22px;
            font-weight: 600;
        }
        .label-txt-control-warning {
            color: #ff6a00;
            font-size: 22px;
            font-weight: 600;
        }

        .tooltip {
            font-family: 'Cairo', sans-serif;
            /*font-size: 14px;
            font-style: normal;
