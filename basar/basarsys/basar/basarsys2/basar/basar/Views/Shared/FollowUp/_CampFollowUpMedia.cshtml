<div class="row">
    <div class="col-md-6">
        <div class="card m-auto">
            <form class="needs-validation" novalidate>
                <div class="card-header text-center badge-primary">
                    <p class="lead">متابعة اعلامية</p>
                </div>
                <div class="card-body">
                    <div class="form-group row  mt-3">
                        <label class="col-md-3 label-txt-control">المخيم</label>
                        <div class="col-md-9">
                            <div class="input-group">
                                <select id="ddlPlanCampsMedia" class="custom-select select-option" required></select>
                                <div class="input-group-append">
                                    <label class="input-group-text" data-toggle="tooltip" title="لمتابعة المخيمات وتحديد مدة زمنية لكل مخيم" for="ddlPlanCampsManager">
                                        <i class="fa fa-question fa-flip-horizontal fa-lg fa-border"></i>

                                    </label>
                                    <label class="input-group-text" data-toggle="tooltip" title="اضافة مخيم جديد" for="ddlPlanCampsManager">
                                        <i class="fa fa-plus fa-lg fa-border"></i>

                                    </label>
                                </div>
                            </div>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3 label-txt-control">مرحلة المخيم</label>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select id="ddlFollowUpStatusMedia" class="form-control" required="required"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3  label-txt-control">تاريخ اشعار المرحلة</label>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" id="txtVisaDateMedia" required autocomplete="off" placeholder="تاريخ انتهاء المرحلة" class="form-control" />
                                    <i class="fa fa-calendar fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3  label-txt-control">رابط الدروب بوكس</label>
                        <div class="col-md-9">
                            <div class="form-group">
                                <input type="url" class="form-control" id="txtCampFollowUpMediaDropboxLink" placeholder="رابط الدروب بوكس" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-3  label-txt-control">بيان المرحلة</label>
                        <div class="col-md-9">

                            <div class="form-group">
                                <textarea class="form-control" id="txtCampFollowUpMediaNote" placeholder="ملاحظات"></textarea>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mt-2">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input type="checkbox" class="custom-control-input" id="cbCampFollowUpMediaIsClosed">
                                    <label class="custom-control-label label-txt-control-warning" for="cbCampFollowUpMediaIsClosed">تم الانتهاء من اجراءات متابعة اعلامية</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-outline-success" id="btnSaveMedia" type="button">حفظ</button>
                    <button class="btn btn-outline-info" type="button">بحث</button>
                    <button class="btn btn-outline-dark pull-left" id="btnResetMedia" type="reset">مسح</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="file-loading">
            <input id="inputmedia" name="inputmedia[]" type="file" accept="image">
        </div>
    </div>
</div>
<!--#region end form -->
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped" id="tblFollowupMedia">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>تاريخ التسجيل</th>
                    <th>المرحلة</th>
                    <th>تاريخ الانتهاء</th>
                    <th>ملاحظات</th>
                    <th>المستخدم</th>
                    <th class="text-center">المرفقات</th>
                </tr>
            </thead>
            <tbody class="campfollowupmediatbody"></tbody>
        </table>
        <p id="click-response"></p>

    </div>

</div>


<div class="text-center small mt-3">يجب مراجعة البيانات <a href="javascript:;">قبل الحفظ</a></div>

