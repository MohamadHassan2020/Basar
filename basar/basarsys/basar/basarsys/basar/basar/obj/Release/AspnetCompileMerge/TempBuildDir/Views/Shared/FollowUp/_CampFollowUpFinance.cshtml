<div class="row">
    <div class="col-md-6">
        <div class="card m-auto">
            <form class="needs-validation" novalidate>
                <div class="card-header text-center badge-danger">
                    <p class="lead">متابعة مالية وحالتها</p>
                </div>
                <div class="card-body">
                    <div class="form-group row  mt-3">
                        <label for="ddlPlanCampsFinance" class="control-label col-sm-4">ملاحظات</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <select id="ddlPlanCampsFinance" class="custom-select select-option" required></select>
                                <div class="input-group-append">
                                    <label class="input-group-text" data-toggle="tooltip" title="لمتابعة المخيمات وتحديد مدة زمنية لكل مخيم" for="ddlPlanCampsFinance">
                                        <i class="fa fa-question fa-flip-horizontal fa-lg fa-border"></i>

                                    </label>
                                    <label class="input-group-text" data-toggle="tooltip" title="اضافة مخيم جديد" for="ddlPlanCampsFinance">
                                        <i class="fa fa-plus fa-lg fa-border"></i>

                                    </label>
                                </div>
                            </div>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="ddlFollowUpStatusFinance" class="control-label col-sm-4">نوع العملية</label>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <select id="ddlFollowUpStatusFinance" class="form-control" required="required"></select>
                            </div>
                        </div>

                        <label for="txtCampFollowUpFinancialDate" class="control-label col-sm-4">تاريخ انتهاء المرحلة</label>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" id="txtCampFollowUpFinancialDate" required autocomplete="off" placeholder="تاريخ انتهاء المرحلة" class="form-control" />
                                    <i class="fa fa-calendar fa-2x"></i>
                                </div>
                            </div>
                        </div>
                        <label for="txtCampFollowUpFinancialAmmount" class="control-label col-sm-4">تاريخ انتهاء المرحلة</label>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="number" id="txtCampFollowUpFinancialAmmount" required autocomplete="off" placeholder="المبلغ" class="form-control" />
                                    <i class="fa fa-money-bill fa-2x"></i>
                                </div>
                            </div>

                        </div>
                        <label for="txtCampFollowUpFinancialNote" class="control-label col-sm-4">ملاحظات</label>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <textarea class="form-control" id="txtCampFollowUpFinancialNote" required placeholder="ملاحظات المتابعة المالية"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mt-2">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input type="checkbox" class="custom-control-input" id="cbCampFollowUpFinancialIsClosed" />
                                    <label class="custom-control-label text-primary h4" for="cbCampFollowUpFinancialIsClosed">تم الانتهاء من اجراءات متابعة المالية</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-outline-success" type="submit">حفظ</button>
                    <button class="btn btn-outline-info" type="button">بحث</button>
                    <button class="btn btn-outline-dark pull-left" id="btnResetFinancial" type="reset">مسح</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="file-loading">
            <input id="inputfinance" name="inputfinance[]" type="file" multiple accept="image">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped" id="tblFollowupFinancial">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>تاريخ التسجيل</th>
                    <th>المرحلة</th>
                    <th>تاريخ الانتهاء</th>
                    <th>المبلغ</th>
                    <th>ملاحظات</th>
                    <th>المستخدم</th>
                    <th class="text-center">المرفقات</th>
                </tr>
            </thead>
            <tbody class="campfollowupfinaincialtbody"></tbody>
        </table>
        <p id="click-response"></p>

    </div>

</div>


<div class="text-center small mt-3">يجب مراجعة البيانات <a href="javascript:;">قبل الحفظ</a></div>

