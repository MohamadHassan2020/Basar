    @Scripts.Render("~/bundles/datepicker")

    <script src="~/js/jsProj/followup.js"></script>
    <script src="~/js/jsProj/followupfinancial.js"></script>
    <script src="~/js/jsProj/followupAdministrative.js"></script>
    <script src="~/js/jsProj/followupmedia.js"></script>

}
