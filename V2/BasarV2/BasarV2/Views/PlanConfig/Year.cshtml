
@{
    ViewBag.Title = "Year";
}

<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/sweetalert2.min.css">

<!--my css-->
<link href="~/app-assets/css/sys/shared.css" rel="stylesheet" />
<link href="~/app-assets/css/sys/mydatatable.css" rel="stylesheet" />
<!--my css-->

 
<div class="content-wrapper">
    <div class="content-body">
        <div class="row match-height">
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">تسجيل عام الخطة</h4>
                    </div>
                    <div class="card-body">
                        <form class="form form-vertical">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="txtYearNameAr">عام الخطة</label>
                                            <div class="position-relative has-icon-left">
                                                <input type="text" id="txtYearNameAr" class="form-control"   placeholder="عام الخطة">
                                                <div class="form-control-position">
                                                    <i class="bx bx-user"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="txtYearDesc">الوصف</label>
                                            <div class="position-relative has-icon-left">
                                                <input type="text" id="txtYearDesc" class="form-control" maxlength="50" placeholder="الوصف" />
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="txtYearOrder">الترتيب</label>
                                            <div class="position-relative has-icon-left">
                                                <input type="number" id="txtYearOrder" class="form-control" name="txtYearOrder" value="0" placeholder="الترتيب">
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <input type="checkbox" class="checkbox-input" checked id="cbYearStatus">
                                                <label for="cbYearStatus">الحاله</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="button" id="btnSave" class="btn btn-primary mr-1">حفظ</button>
                                        <button type="button" id="btnSearch" data-toggle="modal" data-target="#modalTable" class="btn btn-primary mr-1">بحث</button>
                                        <button type="reset" id="btnReset" class="btn btn-light-secondary">مسح</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-lg-8 col-md-6 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tblDataExists" class="table table-striped table-bordered dataex-html5-selectors">
                                <thead>
                                    <tr>
                                        <th> م </th>
                                        <th>العام</th>
                                        <th> Year </th>
                                        <th>تاريخ التسجيل</th>
                                        <th>الحالة</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {

    <!-- Data Tables -->
    <script src="~/dist/vendor/datatables/dataTables.min.js"></script>
    <script src="~/dist/vendor/datatables/dataTables.bootstrap.min.js"></script>

    <!-- Custom Data tables -->
    @*<script src="~/dist/vendor/datatables/custom/custom-datatables.js"></script>*@
    <script src="~/dist/vendor/datatables/custom/fixedHeader.js"></script>

    <!-- Download / CSV / Copy / Print -->
    <script src="~/dist/vendor/datatables/buttons.min.js"></script>
    <script src="~/dist/vendor/datatables/jszip.min.js"></script>
    <script type="text/javascript" src="~/dist/vendor/datatables/pdfmake.min.js"></script>
    <script src="~/dist/vendor/datatables/vfs_fonts.js"></script>
    <script src="~/dist/vendor/datatables/html5.min.js"></script>
    <script src="~/dist/vendor/datatables/buttons.print.min.js"></script>


    <script src="~/sysjs/yearv2.js"></script>
}