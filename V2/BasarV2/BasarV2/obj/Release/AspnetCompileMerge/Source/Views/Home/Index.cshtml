@{
    ViewBag.Title = "البصر العالمية لعيون تبصر الأمل";
}

<style>
     
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 8px;
    }

    th {
        text-align: left;
        background: #272e48;
        position: sticky;
        top: 0px;
    }

    .wrapper {
        width: 100%;
        height: 300px;
        overflow-y: auto;
    }

        .wrapper::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            border-radius: 10px;
            background-color: #464D5C;
        }

        .wrapper::-webkit-scrollbar {
            width: 5px;
            background-color: #464D5C;
        }

        .wrapper::-webkit-scrollbar-thumb {
            border-radius: 10px;
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
            background-color: #8A99B5;
        }
</style>
<div class="content-wrapper">
    <div class="content-body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="first-tab" data-toggle="tab" href="#first" aria-controls="first" role="tab" aria-selected="true">
                    <i class="bx bx-home align-middle"></i>
                    <span class="align-middle">احصائيات المخيمات</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="second-tab" data-toggle="tab" href="#second" aria-controls="second" role="tab" aria-selected="false">
                    <i class="bx bx-user align-middle"></i>
                    <span class="align-middle">تقارير</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="third-tab" data-toggle="tab" href="#third" aria-controls="third" role="tab" aria-selected="false">
                    <i class="bx bx-message-square align-middle"></i>
                    <span class="align-middle">تفاصيل المخيمات</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="fourth-tab" data-toggle="tab" href="#fourth" aria-controls="fourth" role="tab" aria-selected="false">
                    <i class="bx bx-message-square align-middle"></i>
                    <span class="align-middle">اخرى</span>
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="first" aria-labelledby="first-tab" role="tabpanel">
                @{
                    Html.RenderPartial("Home/_NumbersTab1");
                }
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        @{
                            Html.RenderPartial("Home/_YearlyNumbers");
                        }
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        @{
                            Html.RenderPartial("Home/_CampStatsNumbers");
                        }
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        @{
                            Html.RenderPartial("Home/_CountryStatsNumber");
                        }
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        @{
                            Html.RenderPartial("Home/_SponsorStatsNumber");
                        }
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        @{
                            Html.RenderPartial("Home/_TeamStatsNumbers");
                        }
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                        @{
                            Html.RenderPartial("Home/_CampPhaseStatsNumber");
                        }
                    </div>
                </div>

            </div>
            <div class="tab-pane" id="second" aria-labelledby="second-tab" role="tabpanel">

            </div>
            <div class="tab-pane" id="third" aria-labelledby="third-tab" role="tabpanel">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                        @{
                            Html.RenderPartial("Statstics/_Small");
                        }
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                        @{
                            Html.RenderPartial("Statstics/_Small2");
                        }
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                        @{
                            Html.RenderPartial("Statstics/_Small3");
                        }
                    </div>
                </div>

            </div>
            <div class="tab-pane" id="fourth" aria-labelledby="fourth-tab" role="tabpanel">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                        @{
                            Html.RenderPartial("Statstics/_CampStats");
                        }
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                        @{
                            Html.RenderPartial("Statstics/_Yearly");
                        }
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
                        @{
                            Html.RenderPartial("Statstics/_AllStats");
                            Html.RenderPartial("Dashboard/_SmallV2");
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/sysjs/homestats.js?v=2"></script>
}


