
@{
    ViewBag.Title = "خطة مخيمات مؤسسة البصر الخيرية";
}

<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/pickers/pickadate/pickadate.css">
<link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/pickers/daterange/daterangepicker.css">

<!--my css-->
<link href="~/app-assets/css/sys/shared.css" rel="stylesheet" />
<link href="~/app-assets/css/sys/mydatatable.css" rel="stylesheet" />
<!--my css-->

<div class="content-wrapper">
    <div class="content-body">
        <section id="basic-tabs-components">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <h4>خطة مخيمات مؤسسسة البصر</h4>
                    </div>
                </div>
                <div class="card-body">
                    <p>مخيمات <code>البصر</code> العالمية</p>
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="reg-tab" data-toggle="tab" href="#reg" aria-controls="reg" role="tab" aria-selected="true">
                                <i class="bx bx-home align-middle"></i>
                                <span class="align-middle">تسجيل مخيم الخطة</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="all-tab" data-toggle="tab" href="#all" aria-controls="all" role="tab" aria-selected="false">
                                <i class="bx bx-user align-middle"></i>
                                <span class="align-middle">مخيمات الخطة</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="about-tab" data-toggle="tab" href="#about" aria-controls="about" role="tab" aria-selected="false">
                                <i class="bx bx-message-square align-middle"></i>
                                <span class="align-middle">تفاصيل المخيمات</span>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="reg" aria-labelledby="reg-tab" role="tabpanel">
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlPlanConfigYear">العام</label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlPlanConfigYear" class="form-control"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-user"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlTour">الجولة</label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlTour" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlCountry">الدولة</label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlCountry" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlCamp">المخيم</label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlCamp" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlTeam">الفريق</label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlTeam" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlSponsor">الراعي</label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlSponsor" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlSponsorShip"></label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlSponsorShip" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ddlCampStatus"></label>
                                            <div class="position-relative has-icon-left">
                                                <select id="ddlCampStatus" class="form-control select-option"></select>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="txtPlanConfigDateRange"></label>
                                            <div class="position-relative has-icon-left">
                                                <fieldset class="form-group position-relative has-icon-left">
                                                    <input type="text" id="txtPlanConfigDateRange" class="form-control showdropdowns" placeholder="بداية ونهاية المخيم">
                                                    <div class="form-control-position">
                                                        <i class='bx bx-calendar-check'></i>
                                                    </div>
                                                </fieldset>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <input type="checkbox" class="checkbox-input" checked id="cbPreliminaryStatus">
                                                <label for="cbPreliminaryStatus">المخيم يحتاج الى زيارة تحضيرية</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="txtPlanConfigRemark"></label>
                                            <div class="position-relative has-icon-left">
                                                <textarea id="txtPlanConfigRemark" class="form-control" rows="2" cols="20"></textarea>
                                                <div class="form-control-position">
                                                    <i class="bx bx-mobile"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="button" id="btnSave" class="btn btn-primary mr-1">حفظ</button>
                                        <button type="button" id="btnSearch" data-toggle="modal" data-target="#modalTable" class="btn btn-primary mr-1">بحث</button>
                                        <button type="reset" id="btnReset" class="btn btn-light-secondary">مسح</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane" id="all" aria-labelledby="all-tab" role="tabpanel">
                            <div class="table-responsive">
                                <table id="tblDataExists" class="table table-striped table-bordered dataex-html5-selectors">
                                    <thead>
                                        <tr>
                                            <th class="text-center"> م </th>
                                            <th> العام </th>
                                            <th> الجولة</th>
                                            <th> الدولة</th>
                                            <th>المدينة</th>
                                            <th>الفريق</th>
                                            <th>الراعي</th>
                                            <th>بداية المخيم</th>
                                            <th>نهاية المخيم</th>
                                            <th class="text-center">عيادات</th>
                                            <th class="text-center">عمليات</th>
                                            <th class="text-center">نظارات</th>
                                            <th class="text-center"></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="about" aria-labelledby="about-tab" role="tabpanel">
                            <p>
                                يوجد في السنة النبوية العديد من الأحاديث القدسية الشريفة التي وردت عن الله عزّ وجل، منها:
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts {

    <!-- Data Tables -->
    <script src="~/dist/vendor/datatables/dataTables.min.js"></script>
    <script src="~/dist/vendor/datatables/dataTables.bootstrap.min.js"></script>

    <!-- Custom Data tables -->
    @*<script src="~/dist/vendor/datatables/custom/custom-datatables.js"></script>*@
